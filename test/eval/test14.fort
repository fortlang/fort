main = do
  println (cast 1 `I 16`)

  println (cast 1 `I 64`)
  println (cast 0x1 `U 64`)
  x = 2.2
  println (cast x `F 32`)
  println (cast 1.23 `U 32`)
  println (cast 123 `F 32`)
  println (cast 0xff `F 32`)
  p = cast 1 `Pointer (I 32)`
  println (cast p `I 32`)
  println (cast 1.23 `I 64`)

println = \x -> do
  Prim.print x
  Prim.print '\n'

cast = curry Prim.cast

curry = \f a b -> f (a, b)
